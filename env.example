# Vectorpenter Configuration
# Copyright (c) 2025 Machinecraft Technologies

# ==== Core Services (Required) ====
# Embeddings are OpenAI-only by design
OPENAI_API_KEY=

# Vector Database
PINECONE_API_KEY=
PINECONE_INDEX=vectorpenter
PINECONE_CLOUD=gcp
PINECONE_REGION=us-central1
PINECONE_NAMESPACE=default

# Local State Database
DB_URL=sqlite:///./data/vectorpenter.db

# ==== Optional Services ====
# Reranker - Voyage AI is the ONLY reranker (Cohere removed)
VOYAGE_API_KEY=

# Keyword Search (for hybrid search)
TYPESENSE_API_KEY=
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_COLLECTION=vectorpenter_chunks

# Commercial License (required for hybrid search and reranking)
VECTORPENTER_LICENSE_KEY=

# ==== Google Cloud Services (Optional) ====
GOOGLE_APPLICATION_CREDENTIALS=./creds/service-account.json
GCP_PROJECT_ID=
GCP_LOCATION=us

# Document AI - Smart PDF parsing with auto-upgrade
USE_GOOGLE_DOC_AI=false
DOC_AI_PROCESSOR_ID=projects/<project>/locations/us/processors/<processor_id>

# Cloud DLP - Redaction before embedding
USE_GOOGLE_DLP=false
DLP_INFO_TYPES=EMAIL_ADDRESS,PHONE_NUMBER,CREDIT_CARD_NUMBER,PERSON_NAME
DLP_MIN_LIKELIHOOD=POSSIBLE
DLP_MASK_MODE=MASK
DLP_MASK_CHAR=*
DLP_REPLACE_TOKEN=[REDACTED]
DLP_MAX_PAYLOAD_CHARS=200000

# Translation - Auto-translate to English before DLP+embed
USE_TRANSLATION=false
TRANSLATE_TARGET_LANG=en
TRANSLATE_MIN_CHARS=300

# Google Search - Grounding fallback when local retrieval weak
USE_GOOGLE_GROUNDING=false
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_CX=
MAX_GOOGLE_RESULTS=3
GROUNDING_SIM_THRESHOLD=0.18

# Cloud Storage - Audit trail archival
USE_GCS=false
GCS_BUCKET=
GCS_PREFIX=vp/ingest

# Vertex Chat - Optional chat provider (embeddings stay OpenAI)
USE_VERTEX_CHAT=false
VERTEX_CHAT_MODEL=gemini-1.5-pro

# ==== External Services (Optional) ====
# ScreenshotOne - Webpage capture to data/inputs/
USE_SCREENSHOTONE=false
SCREENSHOTONE_API_KEY=
SCREENSHOTONE_BASE=https://api.screenshotone.com/take
SCREENSHOTONE_FORMAT=png
SCREENSHOTONE_DEVICE=desktop
SCREENSHOTONE_FULL_PAGE=true
SCREENSHOTONE_BLOCK_ADS=true

# ==== Processing Configuration ====
# Chunking settings
CHUNK_TARGET_TOKENS=700
CHUNK_OVERLAP_TOKENS=120
LATE_WINDOW_MAX_CHARS=12000

# Network timeouts
NETWORK_TIMEOUT_SECONDS=30
MAX_RETRIES=3
