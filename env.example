# Vectorpenter Configuration
# Copyright (c) 2025 Machinecraft Technologies

# Required: LLM and Embeddings
OPENAI_API_KEY=

# Optional: Reranking Service
# Voyage AI is the reranker (model: rerank-2)
VOYAGE_API_KEY=

# Required: Vector Database
PINECONE_API_KEY=
PINECONE_INDEX=vectorpenter
PINECONE_CLOUD=gcp
PINECONE_REGION=us-central1
PINECONE_NAMESPACE=default

# Local State Database
DB_URL=sqlite:///./data/vectorpenter.db

# Optional: Keyword Search (for hybrid search)
TYPESENSE_API_KEY=
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_COLLECTION=vectorpenter_chunks

# Commercial License (required for hybrid search and reranking)
# Get your license at: https://machinecraft.tech/vectorpenter/pricing
VECTORPENTER_LICENSE_KEY=

# ==== GCP / DocAI (optional) ====
GOOGLE_APPLICATION_CREDENTIALS=./creds/service-account.json
GCP_PROJECT_ID=
GCP_LOCATION=us

# PDF parsing
USE_GOOGLE_DOC_AI=false
DOC_AI_PROCESSOR_ID=projects/<project>/locations/us/processors/<processor_id>

# ==== Vertex Chat ONLY (optional) ====
USE_VERTEX_CHAT=false
VERTEX_CHAT_MODEL=gemini-1.5-pro

# ==== Google Search Grounding (optional) ====
USE_GOOGLE_GROUNDING=false
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_CX=
MAX_GOOGLE_RESULTS=3
GROUNDING_SIM_THRESHOLD=0.18

# ==== Translation (optional) ====
USE_TRANSLATION=false
TRANSLATE_TARGET_LANG=en
TRANSLATE_MIN_CHARS=300

# ==== Google Cloud Storage Archival (optional) ====
USE_GCS=false
GCS_BUCKET=
GCS_PREFIX=vp/ingest
